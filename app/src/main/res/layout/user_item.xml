<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="6px"
    android:elevation="@dimen/padding_margin_6_px"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
     android:gravity="center|left"
        android:layout_gravity="center|left"
        android:id="@+id/lay"
        android:layout_margin="@dimen/padding_margin_16_px"
        >

        <com.arif.friendchat.Utils.CircleImageView
            android:id="@+id/ProfilePic"
            android:layout_width="100px"
            android:layout_height="55dp"

            android:layout_gravity="left|center"

            android:src="@drawable/avatar"

            />
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10px"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_5_px"
                fontPath="fonts/AvenirNextBold.otf"

                android:textColor="@color/text_color"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:text="sqs"
                android:layout_gravity="center|left"
                android:textSize="55px"
                />
        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_5_px"

            android:textColor="@color/text_color"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="sqs"
            android:layout_gravity="center|left"
            android:textSize="40px"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="12:22:201"
            android:textSize="@dimen/padding_margin_30_px"
            android:layout_gravity="center"
            android:gravity="center"

            />
    </LinearLayout>


</android.support.v7.widget.CardView>